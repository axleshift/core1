{
    "name": "@freight-capstone/core1-server",
    "version": "1.0.0",
    "main": "src/index.js",
    "type": "module",
    "bugs": {
        "url": "https://github.com/freight-capstone/core1/issues"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:freight-capstone/core1.git"
    },
    "scripts": {
        "production": "concurrently \"npm run env\" \"npm run gemini\" \"npm run prompt\" \"npm run start\"",
        "start": "node src/index",
        "test": "mocha --timeout 10000 --exit",
        "dev": "nodemon --ext js --ignore '*.json' --trace-deprecation --trace-warnings src/index",
        "lint": "prettier --write .",
        "env": "[ ! -f .env ] && cp .env.example .env",
        "gemini": "[ ! -f .gemini.json ] && cp .gemini.example.json .gemini.json",
        "prompt": "[ ! -f .prompt.json ] && cp .prompt.example.json .prompt.json",
        "pm2": "pm2 start ecosystem.config.cjs",
        "pm2:restart": "pm2 restart all --update-env"
    },
    "author": "The Freight Capstone Core 1",
    "license": "MIT",
    "description": "",
    "dependencies": {
        "@google/generative-ai": "^0.21.0",
        "@sentry/node": "^8.52.0",
        "@sentry/profiling-node": "^8.52.0",
        "axios": "^1.7.7",
        "boolean-pro": "^1.0.0",
        "compression": "^1.7.4",
        "concurrently": "^9.0.1",
        "cors": "^2.8.5",
        "dompurify": "^3.1.7",
        "dotenv": "^16.4.5",
        "express": "^4.21.2",
        "express-mongo-sanitize": "^2.2.0",
        "helmet": "^8.0.0",
        "http-proxy-middleware": "^3.0.3",
        "inspirational-quotes": "^2.0.1",
        "is-spaghetti-code": "^1.0.0",
        "jsdom": "^25.0.1",
        "mongodb": "^6.8.0",
        "multer": "^1.4.5-lts.1",
        "node-cron": "^3.0.3",
        "nodemailer": "^6.9.15",
        "pino": "^9.3.2",
        "pino-http": "^10.3.0",
        "pino-pretty": "^11.2.2",
        "prom-client": "^15.1.3",
        "ratelimit-header-parser": "^0.1.0",
        "request": "^2.88.2",
        "socket.io": "^4.8.1",
        "ua-parser-js": "^1.0.39",
        "useragent": "^2.3.0",
        "xendit-node": "^6.0.0",
        "yamlparser": "^0.0.2"
    },
    "devDependencies": {
        "chai": "^5.1.1",
        "mocha": "^10.7.3",
        "nodemon": "^3.1.4",
        "prettier": "^3.3.3",
        "supertest": "^7.0.0"
    },
    "engines": {
        "node": ">=20.x"
    },
    "private": true
}
