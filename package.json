{
  "name": "@freight-capstone/core1",
  "version": "1.0.0",
  "description": "",
  "bugs": {
    "url": "https://github.com/freight-capstone/core1/issues"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:freight-capstone/core1.git"
  },
  "license": "MIT",
  "author": "The Freight Capstone Core 1",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run start",
    "setup": "concurrently \"npm run server-install\" \"npm run client-install\"",
    "server-install": "cd server && npm i && cp .env.example .env",
    "client-install": "cd client && npm i && cp .env.example .env",
    "post-production": "concurrently \"npm run server\" \"npm run client-post\"",
    "client-post": "cd client && npm run build && cd build && python3 -m http.server",
    "lint": "concurrently \"npm run server-lint\" \"npm run client-lint\"",
    "server-lint": "cd server && npm run lint",
    "client-lint": "cd client && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}